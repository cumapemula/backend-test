generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Members {
  id Int @default(autoincrement()) @id
  code String
  name String
}

model Books {
  id Int @default(autoincrement()) @id
  code String
  title String
  author String
  stock Int @default(0)
}

model Transactions {
  id Int @default(autoincrement()) @id
  member_id Int
  book_id Int
  borrowing_date DateTime @default(now())
  return_date DateTime
}